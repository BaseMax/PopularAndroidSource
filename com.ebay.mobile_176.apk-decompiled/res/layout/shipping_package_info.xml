<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:background="?listContainerOutsideBackground" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:padding="@dimen/psl_padding" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@id/package_weight_title" android:text="@string/psl_weight" style="@style/Sell.Spoke.Title.Top" />
        <androidx.cardview.widget.CardView android:id="@id/package_weight_container" style="@style/Sell.Layout.CardView">
            <LinearLayout android:layout_marginBottom="0.0dip" style="@style/Sell.Layout.Container">
                <LinearLayout android:orientation="horizontal" android:id="@id/weight_pounds_container" android:padding="@dimen/ebayMargin" android:focusable="true" style="@style/Sell.Layout.Row">
                    <TextView android:text="@string/psl_pounds" android:labelFor="@id/shipping_label_weight_pounds" style="@style/PSL.DimensionsLabel" />
                    <EditText android:id="@id/shipping_label_weight_pounds" style="@style/PSL.DimensionsText" />
                    <TextView android:text="@string/package_weight_unit_major_imperial" style="@style/PSL.DimensionsUnit" />
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@id/weight_ounces_container" android:padding="@dimen/ebayMargin" android:focusable="true" style="@style/Sell.Layout.Row">
                    <TextView android:text="@string/psl_ounces" android:labelFor="@id/shipping_label_weight_ounces" style="@style/PSL.DimensionsLabel" />
                    <EditText android:id="@id/shipping_label_weight_ounces" style="@style/PSL.DimensionsText" />
                    <TextView android:text="@string/package_weight_unit_minor_imperial" style="@style/PSL.DimensionsUnit" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView android:id="@id/package_dimensions_title" android:text="@string/psl_dimensions" style="@style/Sell.Spoke.Title.Top" />
        <androidx.cardview.widget.CardView android:id="@id/package_dimensions_container" style="@style/Sell.Layout.CardView">
            <LinearLayout android:layout_marginBottom="0.0dip" style="@style/Sell.Layout.Container">
                <LinearLayout android:orientation="horizontal" android:id="@id/package_length_container" android:padding="@dimen/ebayMargin" android:focusable="true" style="@style/Sell.Layout.Row">
                    <TextView android:text="@string/psl_length" android:labelFor="@id/package_length" style="@style/PSL.DimensionsLabel" />
                    <EditText android:id="@id/package_length" android:text="0" style="@style/PSL.DimensionsText" />
                    <TextView android:text="@string/package_length_unit_imperial" style="@style/PSL.DimensionsUnit" />
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@id/package_width_container" android:padding="@dimen/ebayMargin" android:focusable="true" style="@style/Sell.Layout.Row">
                    <TextView android:text="@string/psl_width" android:labelFor="@id/package_width" style="@style/PSL.DimensionsLabel" />
                    <EditText android:id="@id/package_width" android:text="0" style="@style/PSL.DimensionsText" />
                    <TextView android:text="@string/package_length_unit_imperial" style="@style/PSL.DimensionsUnit" />
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@id/package_height_container" android:padding="@dimen/ebayMargin" android:focusable="true" style="@style/Sell.Layout.Row">
                    <TextView android:text="@string/psl_height" android:labelFor="@id/package_height" style="@style/PSL.DimensionsLabel" />
                    <EditText android:id="@id/package_height" android:text="0" style="@style/PSL.DimensionsText" />
                    <TextView android:text="@string/package_length_unit_imperial" style="@style/PSL.DimensionsUnit" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>