<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:id="@id/link_base" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/ebayMargin2x">
        <LinearLayout android:orientation="vertical" android:id="@id/required_params_list" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textAppearance="@style/EbayTextAppearanceStrong.Title2" android:layout_gravity="center_horizontal" android:id="@id/required_params" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/ebayMargin" android:text="Required parameters" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@id/optional_params_list" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textAppearance="@style/EbayTextAppearanceStrong.Title2" android:layout_gravity="center_horizontal" android:id="@id/optional_params" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/ebayMargin" android:text="Optional parameters" />
        </LinearLayout>
        <EditText android:id="@id/link_contents" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="textNoSuggestions" />
        <Button android:layout_gravity="center_horizontal" android:id="@id/launch_deep_link" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/ebayMargin2x" android:text="Launch link" style="@style/EbayButton.Blue" />
    </LinearLayout>
</ScrollView>