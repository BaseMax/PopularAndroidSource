<?xml version="1.0" encoding="utf-8"?>
<ScrollView style="@style/ItemView.TopScrollView"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:id="@id/sellers_legal_info_layout" style="@style/ItemView">
            <TextView android:text="@string/item_view_sellers_legal_info" style="@style/EbayCardTitleStyle" />
            <androidx.cardview.widget.CardView style="@style/EbayCardStyle.Dynamic">
                <TextView android:autoLink="web" android:id="@id/sellers_legal_info_textview" android:padding="@dimen/ebayPadding2x" android:layout_width="fill_parent" android:layout_height="fill_parent" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout android:id="@id/sellers_return_policy_layout" style="@style/ItemView">
            <TextView android:text="@string/item_view_sellers_return_policy" style="@style/EbayCardTitleStyle" />
            <androidx.cardview.widget.CardView style="@style/EbayCardStyle.Dynamic">
                <TextView android:id="@id/sellers_return_policy_textview" android:padding="@dimen/ebayPadding2x" android:layout_width="fill_parent" android:layout_height="fill_parent" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout android:id="@id/sellers_t_and_c_layout" style="@style/ItemView">
            <TextView android:text="@string/item_view_sellers_t_and_c" style="@style/EbayCardTitleStyle" />
            <androidx.cardview.widget.CardView style="@style/EbayCardStyle.Dynamic">
                <TextView android:id="@id/sellers_t_and_c_textview" android:padding="@dimen/ebayPadding2x" android:layout_width="fill_parent" android:layout_height="fill_parent" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>