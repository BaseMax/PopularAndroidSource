<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_secondary_alt_focused" />
                    <corners android:radius="@dimen/card_corner_radius" />
                    <stroke android:width="1.0dip" android:color="@color/style_guide_list_divider" android:dashWidth="0.0dip" android:dashGap="0.0dip" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/answers_pill_background_mask" />
                    <corners android:radius="@dimen/card_corner_radius" />
                    <stroke android:width="1.0dip" android:color="@color/style_guide_list_divider" android:dashWidth="0.0dip" android:dashGap="0.0dip" />
                </shape>
            </item>
        </selector>
    </item>
    <item android:drawable="?android:selectableItemBackground" />
</layer-list>