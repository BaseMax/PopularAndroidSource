<?xml version="1.0" encoding="utf-8"?>
<inset
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ripple android:color="@color/button_default_pressed">
        <item>
            <selector
              xmlns:android="http://schemas.android.com/apk/res/android">
                <item>
                    <shape android:shape="rectangle">
                        <solid android:color="@android:color/transparent" />
                        <stroke android:width="1.0dip" android:color="@color/button_disabled_background_light" />
                        <corners android:radius="@dimen/capsule_corner_radius" />
                        <padding android:left="@dimen/button_padding_horizontal" android:top="@dimen/button_padding_vertical" android:right="@dimen/button_padding_horizontal" android:bottom="@dimen/button_padding_vertical" />
                    </shape>
                </item>
            </selector>
        </item>
    </ripple>
</inset>