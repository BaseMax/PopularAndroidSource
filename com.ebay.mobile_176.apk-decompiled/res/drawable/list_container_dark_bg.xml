<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="@dimen/listContainerDropShadowThickness">
        <shape android:shape="rectangle">
            <solid android:color="@color/listContainerDarkDropShadow" />
            <corners android:radius="@dimen/listContainerCornerRadius" />
        </shape>
    </item>
    <item android:bottom="@dimen/listContainerDropShadowThickness">
        <shape android:shape="rectangle">
            <solid android:color="@color/listContainerDarkInsideBackground" />
            <corners android:radius="@dimen/listContainerCornerRadius" />
            <padding android:bottom="@dimen/listContainerDropShadowThickness" />
        </shape>
    </item>
</layer-list>