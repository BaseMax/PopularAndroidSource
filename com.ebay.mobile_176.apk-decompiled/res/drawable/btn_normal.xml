<?xml version="1.0" encoding="utf-8"?>
<inset android:insetLeft="@dimen/button_inset_horizontal" android:insetRight="@dimen/button_inset_horizontal" android:insetTop="@dimen/button_inset_vertical" android:insetBottom="@dimen/button_inset_vertical"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ripple android:color="@color/button_default_pressed">
        <item>
            <selector>
                <item android:state_enabled="false">
                    <shape android:shape="rectangle">
                        <corners android:radius="@dimen/button_corner_radius" />
                        <solid android:color="@color/button_disabled_background_light" />
                        <padding android:left="@dimen/button_padding_horizontal" android:top="@dimen/button_padding_vertical" android:right="@dimen/button_padding_horizontal" android:bottom="@dimen/button_padding_vertical" />
                    </shape>
                </item>
                <item android:state_enabled="true">
                    <shape android:shape="rectangle">
                        <corners android:radius="@dimen/button_corner_radius" />
                        <solid android:color="@color/button_default_normal" />
                        <padding android:left="@dimen/button_padding_horizontal" android:top="@dimen/button_padding_vertical" android:right="@dimen/button_padding_horizontal" android:bottom="@dimen/button_padding_vertical" />
                    </shape>
                </item>
            </selector>
        </item>
    </ripple>
</inset>