<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="?colorAccent" />
            <corners android:radius="@dimen/search_pill_radius" />
            <stroke android:width="1.0dip" android:color="?colorAccent" />
        </shape>
    </item>
    <item>
        <ripple android:color="?android:colorControlHighlight" android:exitFadeDuration="@android:integer/config_shortAnimTime">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?buttonSecondaryBackground" />
                    <corners android:radius="@dimen/search_pill_radius" />
                    <stroke android:width="1.0dip" android:color="?iconTintColor" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>